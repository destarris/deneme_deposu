@page "/"



<h3>İş Merkezleri</h3>

<!-- Dinamik butonların ekleneceği alan -->
<div class="mt-3">
    @foreach (var button in Buttons)
    {
        <button class="button">@button</button>
    }
</div>

@code {
    // Buton sayısı
    private int ButtonCount { get; set; } = 10; // Başlangıçta 5 buton

    // Buton isimlerini tutan liste
    private List<string> Buttons { get; set; } = new()
    {
       "fason","kaynak","testere","torna","boya","cnc","lazer","montaj","elektrik"
    };
}
